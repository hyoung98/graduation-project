<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/icon1" />

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="170dp"
        android:fontFamily="@font/nanum2"
        android:text="Health Care"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/search_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/search2" />

    <TextView
        android:fontFamily="@font/nanum2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="380dp"
        android:text="검색"
        android:textColor="#000000"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/nutrient_btn"
        android:layout_width="105dp"
        android:layout_height="116dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="255dp"
        android:background="@drawable/nutrient6" />

    <TextView
        android:fontFamily="@font/nanum2"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="255dp"
        android:layout_marginTop="380dp"
        android:text="영양소"
        android:textColor="#000000"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/ai_btn"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/list2" />

    <TextView
        android:fontFamily="@font/nanum2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="585dp"
        android:text="내 리스트"
        android:textColor="#000000"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/allergy_btn"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/caution" />

    <TextView
        android:fontFamily="@font/nanum2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="585dp"
        android:text="주의성분"
        android:textColor="#000000"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/step_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/step2" />

    <TextView
        android:fontFamily="@font/nanum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="100dp"
        android:text="걸음수"
        android:textColor="#000000"
        android:textSize="15sp" />
</RelativeLayout>